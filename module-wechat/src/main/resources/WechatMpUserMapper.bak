<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minlia.module.wechat.ma.mapper.WechatUserMapper">

    <sql id="QUERY_CONTENT">
		SELECT
			id ,
			guid ,
			subscribe ,
			unionid ,
			openid ,
			nickname ,
			sex ,
			city ,
			province ,
			country ,
			language ,
			headimgurl ,
			create_by ,
			create_date ,
			last_modified_by ,
			last_modified_date
		FROM
			minlia_wechat_user
	</sql>

    <sql id="QUERY_CONDITION">

    </sql>

    <insert id="create" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO minlia_wechat_user(
			guid ,
			subscribe ,
			unionid ,
			openid ,
			nickname ,
			sex ,
			city ,
			province ,
			country ,
			language ,
			headimgurl ,
			create_by
		)
		VALUES
        (
            #{guid,jdbcType=VARCHAR},
            #{subscribe,jdbcType=VARCHAR},
            #{unionid,jdbcType=VARCHAR},
            #{openid,jdbcType=VARCHAR},
            #{nickname,jdbcType=VARCHAR},
            #{sex,jdbcType=VARCHAR},
            #{city,jdbcType=TINYINT},
            #{province,jdbcType=VARCHAR},
            #{country,jdbcType=VARCHAR},
            #{language,jdbcType=VARCHAR},
            #{headimgurl,jdbcType=VARCHAR},
            #{createBy,jdbcType=VARCHAR}
        )
	</insert>

    <update id="update" parameterType="com.minlia.module.wechat.ma.entity.WechatUser">
        UPDATE minlia_wechat_user
        <set>
            <if test="guid != null">
                guid = #{guid,jdbcType=VARCHAR} ,
            </if>
            <if test="subscribe != null">
                subscribe = #{subscribe,jdbcType=VARCHAR} ,
            </if>
            <if test="nickname != null">
                nickname = #{nickname,jdbcType=VARCHAR} ,
            </if>
            <if test="sex != null">
                sex = #{sex,jdbcType=VARCHAR} ,
            </if>
            <if test="city != null">
                city = #{city,jdbcType=TINYINT} ,
            </if>
            <if test="province != null">
                province = #{province,jdbcType=VARCHAR} ,
            </if>
            <if test="country != null">
                country = #{country,jdbcType=VARCHAR} ,
            </if>
            <if test="headimgurl != null">
                headimgurl = #{headimgurl,jdbcType=VARCHAR} ,
            </if>
            last_modified_by = #{lastModifiedBy,jdbcType=VARCHAR} ,
            last_modified_date = #{lastModifiedDate,jdbcType=TIMESTAMP}
        </set>
        WHERE id = #{id,jdbcType=TINYINT}
    </update>

    <delete id="delete">
		DELETE FROM minlia_wechat_user WHERE id = #{id}
	</delete>

    <select id="queryById" resultType="com.minlia.module.wechat.ma.entity.WechatUser">
        <include refid="QUERY_CONTENT"/>
        WHERE id = #{id,jdbcType=BIGINT}
    </select>

    <select id="queryByGuid" resultType="com.minlia.module.wechat.ma.entity.WechatUser">
        <include refid="QUERY_CONTENT"/>
        WHERE guid = #{guid,jdbcType=VARCHAR}
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(1) FROM minlia_wechat_user
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="queryOne" resultType="com.minlia.module.wechat.ma.entity.WechatUser">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
    </select>

    <select id="queryList" resultType="com.minlia.module.wechat.ma.entity.WechatUser">
        <include refid="QUERY_CONTENT"/>
        <include refid="QUERY_CONDITION"/>
    </select>

</mapper>